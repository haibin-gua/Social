/* pages/my/my.wxss */
image{
  width: 100%;
  height: 100%;
}
.header{
  height: 160rpx;
  background: #1AE694;
  padding:0 20rpx;
  overflow: hidden;
}
.hd-img{
  width:120rpx;
  height: 120rpx;
  border-radius: 50%;
  overflow: hidden;
  margin-top:20rpx;
  float: left;
}
.header .name{
  float: left;
  font-size: 30rpx;
  margin-left:30rpx;
  margin-top:30rpx;
}
.coll{
  height: 60rpx;
  box-shadow: rgba(0, 0, 0, 0.1) 0rpx 0rpx 8rpx;
  margin-top:30rpx;
  line-height: 60rpx;
  padding:0 20rpx;
}
.btn{
  width: 80%;
  height: 80rpx;
  background: red;
  border-radius: 40rpx;
  position: absolute;
  bottom: 50rpx;
  left:50%;
  transform: translateX(-50%);
  text-align: center;
  font-size: 36rpx;
  line-height: 80rpx;
  color: #fff;
}
