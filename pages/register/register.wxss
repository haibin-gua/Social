/* pages/register/register.wxss */
.register{
  padding:0 40rpx;
}
.img{
  width:120rpx;
  height: 120rpx;
  border-radius: 50%;
  overflow: hidden;
  margin: 0 auto;
  margin-top:50rpx;
}
.img image{
  width:100%;
  height: 100%;
}
.input{
  width:80%;
  height: 80rpx;
  border:2rpx solid red;
  margin:0 auto;
  margin-top:40rpx;
  border-radius: 30rpx;
}
.input input{
  width:100%;
  height: 100%;
  padding-left: 20rpx;
}
.btn{
  margin-top:40rpx;
}
.btn button{
  width:80%;
  height: 80rpx;
  border-radius: 40rpx;
  background: green;
  color: #333;
  line-height: 80rpx;
}